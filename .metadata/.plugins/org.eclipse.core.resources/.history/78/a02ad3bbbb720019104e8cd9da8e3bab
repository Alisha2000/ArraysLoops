package main;

public class HerosProjectMain {
	

    /**
     * You will need to count occurrence of every letter in a given String
     * and return another String in a format <letter><numberOfOccurrences>
     * Ex:
     * String s = "Hello";
     * you should return H1e1l2o1 which means
     * 'H' has occurred 1 time, 'e' - 1 time, 'l' - 2 times, 'o' - 1 time
     *
     * @param name
     * @return
     */
	static final int MaxChar=256;
    public static String letterOccurrence(String name) {
        String lettersOccurrence = "";
		int count[]=new int[MaxChar];
		int len=lettersOccurrence.length();
		
		for(int i=0;i<len;i++)
			count[lettersOccurrence.charAt(i)]++;
		
		char ch[]=new char[lettersOccurrence.length()];
		for(int i=0; i<len; i++) {
			ch[i]=lettersOccurrence.charAt(i);
			int find=0;
			for(int j=0; j<=i; j++) {
				if(lettersOccurrence.charAt(i)==ch[j])
					find++;
			
		}if (find==1)
			System.out.println("Number of occurence of "+
					lettersOccurrence.charAt(i)+ " is:"+ count[lettersOccurrence.charAt(i)]);
		}
	

        return lettersOccurrence;
    }

