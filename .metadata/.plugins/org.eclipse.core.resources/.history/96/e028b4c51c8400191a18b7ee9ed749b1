package loops;

public class polindromePractice {
	public static void main(String[] args) {
		String name="elvira";
		String m="";
		for(int i=name.length()-1; i>=0;i--) {
			m+=name.charAt(i);
		}System.out.println(m);
		if (m==name) {
			System.out.println("it is polindrome");
		}else {
			System.out.println("it is not polindrome");
		}
	}

}
